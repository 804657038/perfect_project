<view>
  <view class="input-container">
    <view class="input-lists">姓名
      <input class="input-box" placeholder="姓名" placeholder-class="input-text" focus="true"></input>
    </view>
    <view class="input-lists">性别
      <input placeholder="性别" placeholder-class="input-text"></input>
    </view>
    <view class="input-lists">年龄
      <input placeholder="年龄" placeholder-class="input-text"></input>
    </view>
    <view class="input-lists">工作
      <input placeholder="工作类型" placeholder-class="input-text"></input>
    </view>
    <view class="input-lists">手机号码
      <input placeholder="11位手机号" maxlength="11" placeholder-class="input-text"></input>
    </view>
    <view class="input-lists">选择地区
      <view class="btn-district" bindtap="selectDistrict" style="color: {{areaInfoColor}};">{{areaInfo}}</view>
      <view class="arrow-right"></view>
    </view>
    <view class="input-lists">详细地址
      <textarea placeholder="街道门牌信息" placeholder-class="input-text"></textarea>
    </view>
  </view>
  <view class="btn-save">保存</view>
</view>

