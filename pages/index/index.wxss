/**index.wxss**/
.container {
  padding: 0;
}
.banner {
  background-image: url('../../assets/banner_home.png');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  height: 400rpx;
}
.userinfo {
  background: #fff;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-detail {
  display: flex;
  flex-flow: column nowrap;
}
.userinfo-sign {
  line-height: 20px;
  font-size: 14px;
  color: #ccc;
}
.userinfo-nickname {
  font-size: 18px;
}
.btn-exchange-wrap {
  width: 340rpx;
  margin-left: 30rpx;
  padding-bottom: 80rpx;
  display: flex;
  justify-content: space-around;
}






.box {
  position: absolute;
  bottom: 0;
  left: 0rpx;
  background: #fff;
  width: 100%;
  height: 400rpx;
}
.sector {
  position: absolute;
  top: 0;
  left: 160px;
  width: 70px;
  height: 70px;
  border: 4px solid #efefee;
  border-bottom: 4px solid transparent;
  /*border-left: 4px solid red;
  border-right: 4px solid red;*/
  border-radius: 100%;
  /*border-top-left-radius: 60px;
  border-top-right-radius: 60px;
  border-bottom-left-radius: 60px;
  border-bottom-right-radius: 60px;*/
}
.progress {
  position: absolute;
  top: 40px;
  left: 160px;
  width: 35px;
  height: 35px;
  border: 4px #42bd56 solid;
  border-top: 0px solid transparent;
  border-right: 0px solid transparent;
  border-bottom-left-radius: 100%;
  transform-origin: 39px 0px;
}
.mask {
  position: absolute;
  top: 0;
  left: 158px;
  width: 69px;
  height: 69px;
  border: 6px solid transparent;
  border-bottom: 6px solid #fff;
  /*border-left: 4px solid red;
  border-right: 4px solid red;*/
  border-radius: 100%;
  z-index: 5;
  /*border-top-left-radius: 60px;
  border-top-right-radius: 60px;
  border-bottom-left-radius: 60px;
  border-bottom-right-radius: 60px;*/
}
.point {
  width: 4px;
  height: 4px;
  background-color: #42bd56;
  border-radius: 50%;
  position: absolute;
  z-index: 10;
}
.pointStatic {
  left: 7px;
  bottom: 7px;
}
.pointMove {
  left: -3.6px;
  bottom: 33px;
}
