.hd-container {
  background-color: #fff;
  width: 100%;
  height: 130rpx;
  position: relative;
  padding-top: 120rpx;
}
.head-img {
  background-image: url('../../assets/banner_home.png');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 134rpx;
  height: 134rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}
.name {
  font-size: 36rpx;
  font-weight: bold;
  top: 84rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
}
.data-box {
  width: 33.3333%;
  float: left;
  text-align: center;
}
.data {
  color: #42bd56;
  font-size: 50rpx;
  line-height: 68rpx;
  font-weight: bold;
}
.data-name {
  color: #999;
  font-size: 24rpx;
}