<view>
  <view class="input-container">
    <view class="input-lists">姓名
      <input class="input-box" placeholder="姓名" placeholder-class="input-text" focus="true" value="{{initData.name}}" bindblur="getInputVal" data-type="name"></input>
    </view>
    <view class="input-lists">性别
      <input class="input-box" placeholder="性别" placeholder-class="input-text" value="{{inputSex}}"></input>
    </view>
    <view class="input-lists">年龄
      <input class="input-box" placeholder="年龄" placeholder-class="input-text" bindblur="getInputVal" data-type="age" value="{{initData.age}}"></input>
    </view>
    <view class="input-lists">工作
      <input class="input-box" placeholder="工作类型" placeholder-class="input-text" bindblur="getInputVal" data-type="work" value="{{initData.jobType}}"></input>
    </view>
    <view class="input-lists">手机号码
      <input class="input-box" placeholder="11位手机号" maxlength="11" placeholder-class="input-text" bindblur="getInputVal" data-type="phone" value="{{initData.mobile}}"></input>
    </view>
    <view class="input-lists">选择地区
      <view class="btn-district" bindtap="selectDistrict" style="color: {{areaInfoColor}};">{{areaName}}</view>
      <view class="arrow-right"></view>
    </view>
    <view class="input-lists">详细地址
      <input class="copy-box" placeholder="{{addressTip}}" placeholder-class="input-text" bindinput="copyAddress" maxlength="35"  bindblur="getInputVal" data-type="adress"></input>
      <text class="copy-address">{{address}}</text>
    </view>
  </view>
  <view class="btn-save" bindtap="postUserData">{{buttonTip}}</view>
</view>

